package com.lex.dogs.controllers;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestParam;

import com.lex.dogs.services.DogService;

@Controller
public class DogController {
	@Autowired
	private DogService dService;
	
	@GetMapping("/")
	public String index(Model viewModel) {
		viewModel.addAttribute("dogs", this.dService.getAllDogs());
		return "index.jsp";
	}
	@GetMapping("/add")
	public String addPet() {
		return "new.jsp";
	}
	@PostMapping("/add")
	public String newPet(@RequestParam("name") String name, @ RequestParam("breed") String breed, @RequestParam("age") int age) {
		this.dService.createDogHTML(name, breed, age);
		return "redirect:/";
	}
}
